<h1>Todays Appointments</h1>

<br>
<button type="button" class="btn btn-default"><%= link_to 'New Appointment', new_appointment_path %></button>
<br>
<br>
<button type="button" class="btn btn-default"><%= link_to 'Fetch Appointment', fetch_appointments_path %></button>
<br>
<br>
<table class="table table-striped">
  <tr>
    <th>Appointment Start Time</th>
    <th>Appointment End Time</th>
    <th>Patient Full Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.appointment_start_time %></td>
    <td><%= appointment.appointment_end_time %></td>
    <td><%= appointment.patient_full_name %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @appointments, renderer: BootstrapPagination::Rails %>
