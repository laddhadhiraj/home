<h1>Listing appointments</h1>

<table>
  <tr>
    <th>Appointment start time</th>
    <th>Appointment end time</th>
    <th>Patient full name</th>
    <th>Patient mobile phone</th>
    <th>Patient home phone</th>
    <th>Patient email</th>
    <th>Patient full address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.appointment_start_time %></td>
    <td><%= appointment.appointment_end_time %></td>
    <td><%= appointment.patient_full_name %></td>
    <td><%= appointment.patient_mobile_phone %></td>
    <td><%= appointment.patient_home_phone %></td>
    <td><%= appointment.patient_email %></td>
    <td><%= appointment.patient_full_address %></td>
    <td><%= link_to 'Show', [appointment.user, appointment] %></td>
    <td><%= link_to 'Edit', edit_user_appointment_path(appointment.user, appointment) %></td>
    <td><%= link_to 'Destroy', [appointment.user, appointment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Appointment', new_user_appointment_path(params[:user_id]) %>
